<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Maxfire.Prelude.ComponentModel.TypeConverter</AssemblyName>
    <TargetFrameworks>net461;netstandard1.5</TargetFrameworks>
    <OutputType>Library</OutputType>
    <PlatformTarget>AnyCpu</PlatformTarget>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <VersionPrefix>0.2.0</VersionPrefix>

    <PackageId>Maxfire.Prelude.ComponentModel.TypeConverter</PackageId>
    <PackageTags>prelude</PackageTags>
    <PackageReleaseNotes>.NET Core 1.0 and .NET Framework 4.5.2 support</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/maxild/Prelude/</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/maxild/Prelude/</RepositoryUrl>

  </PropertyGroup>

  <Import Project="..\..\Shared.msbuild" />

  <ItemGroup>
    <ProjectReference Include="..\Maxfire.Prelude.Core\Maxfire.Prelude.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.5' ">
    <PackageReference Include="System.ComponentModel.TypeConverter" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
