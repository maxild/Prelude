<Project>
    <PropertyGroup Label="Package Reference dependencies">


        <!-- Microsoft.NETFramework.ReferenceAssemblies is necessary to compile net472 on Mac and Linux without mono -->
        <MicrosoftNETFrameworkReferenceAssembliesPackageVersion>1.0.0</MicrosoftNETFrameworkReferenceAssembliesPackageVersion>

        <!-- Microsoft.NET.Test.Sdk -->
        <MicrosoftNETTestSdkPackageVersion>16.5.0</MicrosoftNETTestSdkPackageVersion>

        <!-- xunit -->
        <!-- Stay on xunit 2.4.0, because 2.4.1 dropped support for netstandard2.0 -->
        <XUnitPackageVersion>2.4.0</XUnitPackageVersion>

        <!-- Shouldly -->
        <ShouldlyPackageVersion>3.0.2</ShouldlyPackageVersion>

        <!-- SourceLink -->
        <MicrosoftSourceLinkGitHubPackageVersion>1.0.0</MicrosoftSourceLinkGitHubPackageVersion>

        <!-- JetBrains.Annotations -->
        <JetBrainsAnnotationsPackageVersion>2018.2.1</JetBrainsAnnotationsPackageVersion>

        <!-- System.ComponentModel.TypeConverter -->
        <SystemComponentModelTypeConverterPackageVersion>4.3.0</SystemComponentModelTypeConverterPackageVersion>

    </PropertyGroup>
</Project>
